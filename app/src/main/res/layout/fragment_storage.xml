<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
		android:layout_marginTop="5dp">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/my_border"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal">

				<CheckBox
					android:id="@+id/storageCheckBoxFloppyA"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="FloppyA"/>

				<Button
					android:id="@+id/storageButtonFloppyA"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:onClick="browseFloppyA"
					android:text="browse"/>

			</LinearLayout>

			<TextView
				android:id="@+id/storageTextViewFloppyA"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="floppy A image"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/my_border"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal">

				<CheckBox
					android:id="@+id/storageCheckBoxFloppyB"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="FloppyB"/>

				<Button
					android:id="@+id/storageButtonFloppyB"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:onClick="browseFloppyB"
					android:text="browse"/>

			</LinearLayout>

			<TextView
				android:id="@+id/storageTextViewFloppyB"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="floppy B image"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="@drawable/my_border"
		android:gravity="center_vertical|center_horizontal"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:orientation="horizontal">

			<CheckBox
				android:id="@+id/storageCheckBoxAta0m"
				android:layout_width="135dp"
				android:layout_height="wrap_content"
				android:text="ata0-master"/>

			<Spinner
				android:id="@+id/storageSpinnerAta0m"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="0dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"/>

			<CheckBox
				android:id="@+id/storageCheckBoxAta0mVvfat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="vvfat"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="right|center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/storageTextViewAta0m"
				android:layout_width="250dp"
				android:layout_height="wrap_content"
				android:text="ata0 master image"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:gravity="center"/>

			<Button
				android:id="@+id/storageButtonAta0m"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:onClick="browseAta0m"
				android:text="browse"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="@drawable/my_border"
		android:gravity="right|center_vertical"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:orientation="horizontal">

			<CheckBox
				android:id="@+id/storageCheckBoxAta0s"
