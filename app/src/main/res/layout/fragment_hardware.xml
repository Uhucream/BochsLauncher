<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="center_horizontal">

	<LinearLayout
		android:id="@+id/cpuLayout"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:gravity="center_vertical|center_horizontal"
		android:background="@drawable/my_border"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="CPU Model:"/>

		<Spinner
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/hardwareSpinnerCpuModel"
			android:gravity="center_horizontal"
			android:padding="0dp"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Description"
			android:id="@+id/hardwareTextViewCpuDesc"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="5dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:gravity="center">

			<LinearLayout
				android:id="@+id/vgaLayout"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:gravity="center_horizontal"
				android:background="@drawable/my_border"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="VGA Card:"
					android:gravity="center_horizontal"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:padding="0dp"
					android:id="@+id/hardwareSpinnerVga"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="description"
					android:gravity="center"
					android:id="@+id/hardwareTextViewVgaDesc"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/soundLayout"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:gravity="center_horizontal"
				android:background="@drawable/my_border"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Sound Card:"
					android:gravity="center_horizontal"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:padding="0dp"
					android:id="@+id/hardwareSpinnerSound"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="description"
					android:gravity="center_horizontal"
					android:id="@+id/hardwareTextViewSoundDesc"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/ethernetLayout"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:gravity="center"
				android:background="@drawable/my_border"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Ethernet Card:"
					android:gravity="center_horizontal"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:padding="0dp"
					android:id="@+id/hardwareSpinnerEthernet"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="description"
					android:gravity="center_horizontal"
					android:id="@+id/hardwareTextViewEthernetDesc"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/pciLayout"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:gravity="center_vertical|center_horizontal"
			android:background="@drawable/my_border"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="PCI:"
				android:gravity="center_horizontal"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginLeft="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="Slot1:"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:id="@+id/hardwareSpinnerSlot1"
					android:padding="0dp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginLeft="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="Slot2:"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/hardwareSpinnerSlot2"
					android:padding="0dp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginLeft="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="Slot3:"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/hardwareSpinnerSlot3"
					android:padding="0dp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginLeft="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="Slot4:"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/hardwareSpinnerSlot4"
					android:padding="0dp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginLeft="5dp">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="Slot5:"/>

				<Spinner
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/hardwareSpinnerSlot5"
					android:padding="0dp"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="5dp"
		android:gravity="center_vertical|center_horizontal">

		<RadioGroup
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:gravity="center_vertical|center_horizontal"
			android:background="@drawable/my_border"
			android:id="@+id/chipsetLayout"
			android:layout_marginLeft="5dp">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Chipset:"/>

			<RadioButton
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="i430fx"
				android:id="@+id/hardwareRadioButtonI430fx"
				android:onClick="onClickI430fx"
				android:layout_marginRight="5dp"/>

			<RadioButton
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="i440fx"
				android:id="@+id/hardwareRadioButtonI440fx"
				android:onClick="onClickI440fx"
				android:layout_marginRight="5dp"/>

		</RadioGroup>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="240dp"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_marginLeft="5dp"
			android:background="@drawable/my_border"
			android:id="@+id/memoryLayout">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Memory:"/>

			<SeekBar
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:max="1024"
				android:id="@+id/hardwareSeekBarMemory"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="value"
				android:id="@+id/hardwareTextViewMemory"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

