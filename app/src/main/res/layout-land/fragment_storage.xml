<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="5dp">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:background="@drawable/my_border"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal">

				<CheckBox
					android:id="@+id/storageCheckBoxFloppyA"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Floppy A"/>

				<Button
					android:id="@+id/storageButtonFloppyA"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:onClick="browseFloppyA"
					android:text="browse"/>

			</LinearLayout>

			<TextView
				android:id="@+id/storageTextViewFloppyA"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="floppy A image"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:background="@drawable/my_border"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:orientation="horizontal">

				<CheckBox
					android:id="@+id/storageCheckBoxFloppyB"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Floppy B"/>

				<Button
					android:id="@+id/storageButtonFloppyB"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:onClick="browseFloppyB"
					android:text="browse"/>

			</LinearLayout>

			<TextView
				android:id="@+id/storageTextViewFloppyB"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="floppy B image"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:background="@drawable/my_border"
			android:gravity="center_vertical|center_horizontal"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:text="Boot"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

			<Spinner
				android:id="@+id/storageSpinnerBoot"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginTop="5dp"
		android:background="@drawable/my_border"
		android:orientation="horizontal"
		android:gravity="right|center_vertical">

		<CheckBox
			android:id="@+id/storageCheckBoxAta0m"
			android:layout_width="135dp"
			android:layout_height="wrap_content"
			android:text="ata0-master"/>

		<Spinner
			android:id="@+id/storageSpinnerAta0m"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:padding="0dp"/>

		<CheckBox
			android:id="@+id/storageCheckBoxAta0mVvfat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:text="vvfat"/>

		<TextView
			android:id="@+id/storageTextViewAta0m"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:text="ata0 master image"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:gravity="center"/>

		<Button
			android:id="@+id/storageButtonAta0m"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:onClick="browseAta0m"
			android:text="browse"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="@drawable/my_border"
		android:gravity="right|center_vertical"
		android:orientation="horizontal"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp">

		<CheckBox
			android:id="@+id/storageCheckBoxAta0s"
			android:layout_width="135dp"
			android:layout_height="wrap_content"
			android:text="ata0-slave"/>

		<Spinner
			android:id="@+id/storageSpinnerAta0s"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:padding="0dp"/>

		<CheckBox
			android:id="@+id/storageCheckBoxAta0sVvfat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:text="vvfat"/>

		<TextView
			android:id="@+id/storageTextViewAta0s"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:text="ata0 slave image"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:gravity="center"/>

		<Button
			android:id="@+id/storageButtonAta0s"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:onClick="browseAta0s"
			android:text="browse"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="@drawable/my_border"
		android:gravity="right|center_vertical"
		android:orientation="horizontal"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp">

		<CheckBox
			android:id="@+id/storageCheckBoxAta1m"
			android:layout_width="135dp"
			android:layout_height="wrap_content"
			android:text="ata1-master"/>

		<Spinner
			android:id="@+id/storageSpinnerAta1m"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:padding="0dp"/>

		<CheckBox
			android:id="@+id/storageCheckBoxAta1mVvfat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:text="vvfat"/>

		<TextView
			android:id="@+id/storageTextViewAta1m"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:text="ata1 master image"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:gravity="center"/>

		<Button
			android:id="@+id/storageButtonAta1m"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:onClick="browseAta1m"
			android:text="browse"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:background="@drawable/my_border"
		android:gravity="right|center_vertical"
		android:orientation="horizontal"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp">

		<CheckBox
			android:id="@+id/storageCheckBoxAta1s"
			android:layout_width="135dp"
			android:layout_height="wrap_content"
			android:text="ata1-slave"/>

		<Spinner
			android:id="@+id/storageSpinnerAta1s"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:padding="0dp"/>

		<CheckBox
			android:id="@+id/storageCheckBoxAta1sVvfat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:text="vvfat"/>

		<TextView
			android:id="@+id/storageTextViewAta1s"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:text="ata1 slave image"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:gravity="center"/>

		<Button
			android:id="@+id/storageButtonAta1s"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:onClick="browseAta1s"
			android:text="browse"/>

	</LinearLayout>

</LinearLayout>

